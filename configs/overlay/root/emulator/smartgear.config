#
# SmartGear configuration file
#
# verbose
# The display_type can be lcd,fb0,fb1
display_type lcd
# center image on cropped display (overscan)
display_offset_x 200
display_offset_y 200

#user options
audio of
head2head off
use_framebuffer off
stretch_hq2x on

start_dir /root/yam/sg_free/
# SPI channel number
lcd_channel 32766
# flipped = rotated 180, another value = normal orientation
lcd_orientation flipped
# waveshare35a
# SPI speed
#lcd_speed 16000000
# lcd_type can be one of: st7735 (128x160), ili9341 (240x320), hx8357 (320x480)
#lcd_type hx8357
# SPI ST7735 & HX8357 connections
#lcd_dc 18
#lcd_rst 22
#lcd_led 12
# SPI ILI9341 connections to header pin numbers (not bcm GPIO numbers)
#lcd_speed 46000000
lcd_speed 32000000
lcd_type ili9341
# piplay setup
lcd_dc 18
lcd_rst 22
lcd_led 13
# my setup
#lcd_dc 16
#lcd_rst 18
#lcd_led 11


# possible player controls: keyboard, gpio, gamepad0 gamepad1
p1 gpio
p2 gamepad0

# keyboard definitions use scancodes

# ESC
key_exit 1
# arrow keys (not keypad)
key_up 103
key_down 108
key_left 105
key_right 106
# Z key
key_start 44
# B key
key_select 48
# ENTER
key_a 28
# Q
key_b 16
# W
key_c 17
# E
key_d 18

# GPIO definitions use header pin numbers (not BCM GPIO numbers)
gpio_up 26
gpio_down 28
gpio_left 30
gpio_right 32
gpio_a 35
gpio_b 37
gpio_c 39
gpio_d 41
gpio_start 43
gpio_select 45
#gpio_exit 6
gpio_exit 5

